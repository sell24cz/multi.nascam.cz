<!-- Tasks Card Example -->
<div class="col-xl-3 col-md-6 mb-4">
   <div class="card border-left-{{color}} shadow h-100 py-2">
      <div class="card-body">
         <div class="row no-gutters align-items-center">
            <div class="col mr-2">
               <div class="text-xs font-weight-bold text-{{color}} text-uppercase mb-1">
                  {{hostname}} 
                  <form  id="delete" method="POST" >
                     <input type="hidden" name="delete" value="{{id}}">
                     <span style="float:right; padding-left: 15px;">  <a href="#" onclick="submitForm()">DELETE</a></span>
                  </form>
                  <span style="float:right; padding-left: 15px; "> <a href="http://{{ip}}" target="_blank"> WWW </a></span> 
                  <span style="float:right; "> <a href="#" data-id='{{id}}' class='camera'> CAMERA </a></span> 
               </div>
               <hr>
               <div class="row no-gutters align-items-center">
                  <div class="col-auto">
                     <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">CPU {{cpu}}%</div>
                  </div>
                  <div class="col">
                     <div class="progress progress-sm mr-2">
                        <div class="progress-bar bg-{{color}}" role="progressbar"
                           style="width: {{cpu}}%" aria-valuenow="50" aria-valuemin="0"
                           aria-valuemax="100"></div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-auto"> 
            </div>
         </div>
         <div class="row no-gutters align-items-center">
            <div class="col mr-2">
               <div class="text-xs font-weight-bold text-{{color}} text-uppercase mb-1">
               </div>
               <div class="row no-gutters align-items-center">
                  <div class="col-auto">
                     <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">HDD {{hdd}}%</div>
                  </div>
                  <div class="col">
                     <div class="progress progress-sm mr-2">
                        <div class="progress-bar bg-{{color}}" role="progressbar"
                           style="width: {{hdd}}%" aria-valuenow="50" aria-valuemin="0"
                           aria-valuemax="100"></div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-auto">
            </div>
         </div>
         <hr>
         <div class="h5 mb-0 font-weight-bold text-gray-800"><small>Camera online: </small> <span style="float:right;">{{camonline}} </span></div>
         <hr>
         <div class="h5 mb-0 font-weight-bold text-gray-800"><small>Camera offline: </small> <span style="float:right;">{{camoff}}  </span></div>
         <hr>
         <div class="h5 mb-0 font-weight-bold text-gray-800"><small>User camera off: </small> <span style="float:right;">{{camoffuser}}  </span></div>
         <hr>
         {{uptime}}<span style="color: red;">{{alert}}</span>
      </div>
   </div>
</div>
