                <!-- Modal define email-->
                <div class="modal fade" id="email" tabindex="-1" role="dialog" aria-labelledby="email" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="email">{{header}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <form method="POST">

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">{{smtpserver}}</label>
                                        <input type="text" name="smtpserver" class="form-control" id="exampleInputEmail1" value="{{data1}}"
                                            aria-describedby="emailHelp" placeholder="">
                                        <small id="emailHelp" class="form-text text-muted">posta.hotmail.com</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">{{smtpport}}</label>
                                        <input type="text" name="smtpport" class="form-control" id="exampleInputPassword1" value="{{data2}}"
                                            placeholder="dd{{data2}}">
                                        <small id="emailHelp" class="form-text text-muted">465</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">{{smtpssl}}</label>
                                        <input type="text" name="smtpssl" class="form-control" id="exampleInputPassword1" value="{{data3}}"
                                            placeholder="">
                                        <small id="emailHelp" class="form-text text-muted">YES / NO</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">{{smtpuser}}</label>
                                        <input type="text" name="smtpuser" class="form-control" id="exampleInputPassword1" value="{{data4}}"
                                            placeholder="">
                                        <small id="emailHelp" class="form-text text-muted">user@hotmail.com</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">{{smtppassword}}</label>
                                        <input type="password" name="smtppassword" class="form-control" id="exampleInputPassword1" value="{{data5}}"
                                            placeholder="">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">{{smtpfrom}}</label>
                                        <input type="text" name="smtpfrom" class="form-control" id="exampleInputPassword1" value="{{data6}}"
                                            placeholder="">
                                        <small id="emailHelp" class="form-text text-muted">user@hotmail.com</small>
                                    </div>

                                    <button style="float: right;" type="submit" class="btn btn-primary">{{Submit}}</button>
                                </form>

                            </div>
                            {# <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{Close}}</button>
                            </div> #}
                        </div>
                    </div>
                </div>